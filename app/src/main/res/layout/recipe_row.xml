<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="1dp"
    android:layout_margin="@dimen/recipe_row_margin"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/recipeTitle"
            style="@style/RecipeTitle"
            android:layout_marginLeft="@dimen/recipe_row_padding"
            android:layout_marginRight="@dimen/recipe_row_padding"
            android:layout_marginTop="@dimen/recipe_row_padding"
            />

        <TextView
            android:id="@+id/recipeDescription"
            style="@style/RecipeDescription"
            android:layout_margin="@dimen/recipe_row_padding"
            android:maxLines="3"
            android:ellipsize="end"/>

    </LinearLayout>
</android.support.v7.widget.CardView>